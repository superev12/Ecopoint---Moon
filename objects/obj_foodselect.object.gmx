            <string>//Set state etc
/*
    This checks for a click, and sets whether or not you're creating food
    Then it adds a food module if the blankroom has been around for 1 turn
    Or longer. For all other instances it presumes you're not doing anything,
    so untoggles. Maybe we need to refine it?

*/
if (mouse_check_button_pressed(mb_left)){
    if (device_mouse_x_to_gui(0) == median(x_gui, device_mouse_x_to_gui(0), x_gui+64) &amp;&amp; (device_mouse_y_to_gui(0) == median(y_gui, device_mouse_y_to_gui(0), y_gui+64)))
    {
        global.tool_selected = tool_list.food;
        //show_debug_message("You can now choose a module for food");
    } else if (global.tool_selected == tool_list.food) and (instance_position(mouse_x, mouse_y, obj_character)) 
    {
        global.tool_selected = tool_list.empty;
        //show_debug_message("Character selected, food deselected");
    } else if (global.tool_selected == tool_list.food) and (!instance_position(mouse_x, mouse_y, obj_module_blank_floor))
    {
        global.tool_selected = tool_list.empty;
        //show_debug_message("No longer choosing food");
    } 
    else if (global.tool_selected == tool_list.food) and (instance_position(mouse_x, mouse_y, obj_module_blank_floor)) 
    {
        if (instance_position(mouse_x, mouse_y, obj_module_blank_floor).turns_alive &gt; -1) 
        {
            instance_create(floor(mouse_x/64)*64, floor(mouse_y/64)*64-12, obj_module_farm);
        }
        global.tool_selected = tool_list.food;   
    }
}

//Highlights icon based on selection
if global.tool_selected == tool_list.food
{
    sprite_index = spr_foodchoice_selected;
}
else
{
    sprite_index = spr_foodchoice;
}
</string>
